extends layout
block content
    div(class="container-fluid")
        div(class="d-flex justify-content-center")
            div(class="h4") Sign up
        div(class="d-flex justify-content-center text-center")
            form(method='POST' action='')
                div.form-group
                    label(for="username") #[strong Username]
                        input.form-control(type="text" placeholder="username" name="username" required="true")
                div.form-group
                    label(for="password") #[strong Password]
                        input.form-control(type="password" placeholder="password" name="password" required="true")
                br
                button.btn.btn-secondary(type='submit') Submit
        div(class="d-flex justify-content-center text-center")
            if errors
                for error in errors
                    p= error.msg
            if dbError
                p= dbError
